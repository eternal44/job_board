<%= form_tag update_multiple_jobs_path, method: :put do %>
  <table class="table table-bordered table-condensed table-striped">
    <thead>
      <tr>
        <th>Job Type</th>
        <th>Employer</th>
        <th>Location</th>
        <th>Appointment</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <%= hidden_field_tag "job_ids[]", job.id %>
        <tr>
          <td><%= link_to job.job_types.map(&:job_type).sort.join(", "), job %></td>
          <td><%= job.user.profile.try(:name)%></td>
          <td><%= job.location %>
          <td><%= job.appointment_date_time %>
          <td><%= job.status %></td>
          <td><%= link_to "Edit", edit_job_path(job) %></td>
          <td><%= link_to "Destroy", job_path(job),
            method: :delete,
            data: {confirm: 'Are you sure?' } if policy(job).destroy? %></td>
        </tr>
        <ul class="errors">
          <% job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        </li>
      <% end %>
    </tbody>
  </table>
  </ul>
  <%= fields_for :job do |f| %>
    <div class="field">
      <%= f.label :change_status %>
      <%= f.select :status, ['Unconfirmed', 'Confirmed', 'Dispatched'] %>
    </div>
    <div class="field">
      <%= f.select(:attendant_id) do %>
        <% User.where(role: 'Attendant').each do |u| %>
          <%= content_tag(:option, u.profile.name, value: u.id) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end %>

