<%= form_tag update_multiple_jobs_path, method: :put do %>
  <ul>
    <% @jobs.each do |job| %>
      <li>
        <%= hidden_field_tag "job_ids[]", job.id %>
        <%= job.title %>
        <ul class="errors">
          <% job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
  <%= fields_for :job do |f| %>
    <div class="field">
      <%= f.label :change_status %>
      <%= f.select :status, [['Approved'],['Pending'],['Open'],['Closed'],['Finished']] %>
    </div>
  <% end %>
  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end %>

