<div class="row pull-right">
  <%= search_form_for @q, html: {class: "form-inline navbar-left" } do |f| %>
    <%= f.search_field :title_or_location_cont, placeholder: "Search jobs", class: "form-control vertical-align: middle", style: "top-padding: 10px; margin-left: 10px"%>
    <%= f.submit "Search", class: "btn btn-primary", style: "top-padding: 10px; margin-left: 10px" %>
  <% end %>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>
<%= current_user.present? %>

<div class="row-fluid">
  <% if current_user.role == 'Employer' %>
    <%= link_to 'New job', new_job_path %></br>
  <% end %>
  </br>

  <table class="table table-bordered table-condensed table-striped">
    <thead>
      <tr>
        <th>Job Title</th>
        <th>Employer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if @job.present? %>
        <% @job.each do |job| %>
          <tr>
            <td><%= link_to job.title, job %></td>
            <td><%= link_to job.user.profile.try(:name), profile_path(job.user.profile.id) %></td>
            <td><%= link_to "Edit", edit_job_path(job) %></td>
            <td><%= link_to "Destroy", job_path(job), method: :delete, data: {confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="span8">
  </div>
</div>
